echo.
IF {%FOLDER%}=={} GOTO STEP2
IF NOT EXIST %FOLDER% ( Echo PATH %FOLDER% DOESNT EXIST. TRYING TO CREATE %FOLDER%....
mkDIR %FOLDER% )
echo.
IF NOT EXIST %FOLDER% ( Echo ERROR WHILE CREATING %FOLDER% !! PROCESS TERMINATING..
GOTO REPEAT)

:GENERATE
@echo open tn3 > $$ftp$$.txt
@echo REXMNT >> $$ftp$$.txt
@echo MONKEY >> $$ftp$$.txt
@echo cd %DIR% >> $$ftp$$.txt
@echo GET CRDPRIXP  %FOLDER%\CRDPRIXP.TXT >> $$ftp$$.txt
@echo GET CRDPRIDP  %FOLDER%\CRDPRIDP.TXT >> $$ftp$$.txt
